  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "run tester",
      "program": "${workspaceFolder}\\src\\tests\\main.ts",
      "outFiles": [
        "${workspaceFolder}/lib/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    },
    
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\lib\\tester.js"
    }
  ]
}